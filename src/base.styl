@import url('https://fonts.googleapis.com/css?family=Montserrat:400,600&display=swap')

borderColor= #144fc6
fillColor= #6ab3f8

// Breakpoints
phone= 480px
tablet= 768px
pc= 1080px

toFlex($justify=center, $align=center, $dir=row, $wrap=wrap)
  display flex
  flex-flow $dir $wrap
  justify-content $justify
  align-items $align

* 
  box-sizing border-box
  margin 0
  padding 0


body 
  background-color #3494e4
  color #fff
  font-family 'Montserrat', sans-serif
  toFlex start center column
  display flex
  justify-content start
  align-items center
  flex-direction column
  height 95svh
  padding 10px


